# Citadel Alpha - HX Platform Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================
# HX Platform Service Endpoints
# ============================================================

# Ollama Embeddings Service
OLLAMA_EMBEDDINGS_URL=http://hx-orchestrator-server:11434
OLLAMA_EMBEDDINGS_MODEL=mxbai-embed-large

# Ollama LLM Service
OLLAMA_LLM_URL=http://hx-ollama1:11434
OLLAMA_LLM_MODEL=gemma3:27b

# Qdrant Vector Database
QDRANT_URL=https://hx-vectordb-server:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=citadel_alpha_crawls

# Redis Cache
REDIS_URL=redis://hx-sqldb-server:6379
REDIS_DB=0
REDIS_PASSWORD=

# Open WebUI Integration
OPEN_WEBUI_URL=http://hx-webui-server:8080
HX_API_KEY=your_api_key_here

# ============================================================
# Application Configuration
# ============================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=11236

# Crawl4AI Configuration
PLAYWRIGHT_HEADLESS=true
MAX_CONCURRENT_CRAWLS=5
CRAWL_TIMEOUT=30000

# Cache Settings
ENABLE_REDIS_CACHE=true
CACHE_TTL=3600

# Vector Database Settings
EMBEDDING_DIMENSION=1024
VECTOR_SIMILARITY_METRIC=cosine

# ============================================================
# Feature Flags
# ============================================================

# Enable specific integrations
ENABLE_OLLAMA_EMBEDDINGS=true
ENABLE_OLLAMA_LLM=true
ENABLE_QDRANT=true
ENABLE_REDIS_CACHE=true

# Development/Debug
DEBUG_MODE=false
ENABLE_API_DOCS=true
